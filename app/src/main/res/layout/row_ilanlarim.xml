<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp">

        <ImageView
            android:id="@+id/imgIlanim"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:src="@drawable/default_image" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginStart="@dimen/_10sdp">

            <TextView
                android:id="@+id/txtIlanimAciklama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="İlan Açıklaması"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/myriadpro_regular"
                android:textSize="@dimen/_14ssp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true">

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/icon_location" />

                <TextView
                    android:id="@+id/txtIlanimKonum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ankara"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/myriadpro_regular"
                    android:textSize="@dimen/_14ssp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_3sdp" />


                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>


                <TextView
                    android:id="@+id/txtIlanimFiyat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1500"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/myriadpro_regular"
                    android:textSize="@dimen/_14ssp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_3sdp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₺"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/myriadpro_regular"
                    android:textSize="@dimen/_14ssp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_3sdp" />






            </LinearLayout>



        </RelativeLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtIlanSil"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:text="@string/Sil"
            android:textSize="@dimen/_13ssp"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:background="@drawable/background_login" />

        <View
            android:layout_width="@dimen/_10sdp"
            android:layout_height="1dp" />

        <TextView
            android:id="@+id/txtIlanGuncelle"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:text="@string/Güncelle"
            android:textSize="@dimen/_13ssp"
            android:gravity="center"
            android:textColor="@color/colorYellow"
            android:background="@drawable/background_edit_profile" />

    </LinearLayout>

</LinearLayout>