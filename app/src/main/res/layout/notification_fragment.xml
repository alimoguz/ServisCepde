<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal"
        android:background="@color/appColor">

        <LinearLayout
            android:id="@+id/linText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtBildirimSayisi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:fontFamily="@font/myriadpro_regular"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_12ssp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/OkunmamışBildirim"
                android:fontFamily="@font/myriadpro_regular"
                android:textColor="@color/colorWhite"
                android:layout_marginStart="@dimen/_3sdp"
                android:textSize="@dimen/_12ssp" />





        </LinearLayout>

        <ImageView
            android:id="@+id/imgBildirimIcon"
            android:layout_width="@dimen/_5sdp"
            android:layout_height="@dimen/_5sdp"
            android:src="@drawable/icon_notification_unread"
            android:layout_toEndOf="@id/linText"
            android:layout_alignTop="@id/linText"

            />


    </RelativeLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgBildirimDurum"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:src="@drawable/icon_notification_unread" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtBildirimBaslik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bildirim Başlığı"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/myriadpro_bold"
                    android:textSize="@dimen/_13ssp"
                    android:maxLines="1"
                    />

                <TextView
                    android:id="@+id/txtBildirimMetin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bildirim metni burada yer alacak"
                    android:maxLines="1"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/myriadpro_regular" />




            </LinearLayout>

            <TextView
                android:id="@+id/txtBildirimZaman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 saat önce"
                android:textSize="@dimen/_11ssp"
                />




        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/appColor"
            android:layout_marginTop="@dimen/_10sdp"/>





    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:src="@drawable/icon_notification_read" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bildirim Başlığı"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/myriadpro_bold"
                    android:textSize="@dimen/_13ssp"
                    android:maxLines="1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bildirim metni burada yer alacak"
                    android:maxLines="1"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/myriadpro_regular" />




            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 saat önce"
                android:textSize="@dimen/_11ssp"
                />




        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/appColor"
            android:layout_marginTop="@dimen/_10sdp"/>





    </LinearLayout>





</LinearLayout>