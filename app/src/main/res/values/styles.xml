<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.MaterialComponents" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense" tools:override = "true"  >

        <item name="boxBackgroundColor">@color/colorWhite</item>
        <item name="boxStrokeColor">@color/colorYellow</item>

    </style>

    <style name="Theme.MaterialComponents.Light.NoActionBar.FullScreen" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:radius">10dp</item>
        <item name="android:text">@string/login_with_facebook</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>
